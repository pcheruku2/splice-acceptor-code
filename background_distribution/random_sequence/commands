for i in `cat chr_fa_files.txt`; do perl length.pl latest_hg19_sizes.txt ${i}; done > confirmed_chr_lengths.txt



# generate a bed file, and samtools input file where for each randomly picked chromosome, their subsequent coordinates are picked randomly, and specified window size (33 in example below), and number (100 in example below) of fasta sequences to extract
perl random_bed.pl confirmed_chr_lengths.txt 33 100 

# use samtools to fetch the sequence specified in the samtools input file (*.sam.txt) and output to a fasta (*.fa) file
samtools faidx hg19_24chrs.fa.gz -r random_w33_n100.sam.txt -o random_w33_n100.fa 

# filter the fasta file and remove sequences with "N's" and convert lower case bases to upper case
perl filter.pl random_w33_n100.fa > random_w33_n100_filtered.fa
